<h1>{{title}}</h1>

<div class="login page">

    <form method="post">
      <div>
        <label for="username">Nazwa użytkownika</label>
        <input type="text" id="username" name="username" class="form-control" required />
      </div>
      <div>
        <label for="password">Hasło</label>
        <input type="password" id="password" name="password" class="form-control" required />
      </div>
      <div>
        <label for="email">Adres email</label>
        <input type="email" id="email" name="email" class="form-control" required />
      </div>
      <div>
        <label for="fullname">Imię i nazwisko</label>
        <input type="fullname" id="fullname" name="fullname" class="form-control" required />
      </div>
      <div>
        <label for="address">Adres odbioru</label>
        <input type="address" id="address" name="address" class="form-control" required />
      </div>
      <input type="submit" value="Zarejestruj się" class="btn btn-success"/>
      {{# if message }}
      <span class="label label-danger">{{message}}</span>
      {{/if}}
      {{# if success }}
      <span class="label label-success">{{success}}</span>
      {{/if}}
    </form>

    
    <hr>
