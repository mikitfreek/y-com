<h1>{{title}}</h1>
{{!-- <p>Welcome to the {{title}}</p> --}}

<ul class="list-group">
  {{!-- {{# each products }} --}}
  <li class="list-group-item clearfix products-categories">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <a href="/cat/Laptopy%20Gamingowe">
        <strong>Laptopy Gamingowe</strong>
      </a>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <a href="/cat/Komputery%20Stacjonarne">
        <strong>Komputery Stacjonarne</strong>
      </a>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <a href="/cat/Chłodziarki%20Lodoherbaty">
        <strong>Chłodziarki Lodoherbaty</strong>
      </a>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <a href="/cat/Inteligentne%20Lodówki">
        <strong>Inteligentne Lodówki</strong>
      </a>
    </div>
  </li>
  {{!-- {{/each}} --}}
</ul>

<div class="row">
  {{# each products }}
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
    <div class="thumbnail">
      {{# if this.img }}
      <img src="{{ this.img }}" title="thumbnail" />
      {{ else }}
      <img src="https://via.placeholder.com/420x315" title="thumbnail" />
      {{/if}}
      <div class="caption">
        <h3><a href="/id/{{ this.id }}">{{ this.title }}</a></h3>
        {{!-- <p class="description">{{{this.description}}}</p> --}}
        <div class="clearfix">
          <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }} PLN</div>
          <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart"
              aria-hidden="true"></i> Dodaj do koszyka</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

