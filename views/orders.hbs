<h1>{{title}}</h1>

<ul class="list-group">
  <li class="list-group-item clearfix products-categories horizontal">
    <div>
      <a href="/account">
        <strong>Moje dane</strong>
      </a>
    </div>
    <div>
      <a href="/orders">
        <strong>Moje zamówienia</strong>
      </a>
    </div>
  </li>
</ul>

{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong><a href="/id/{{ this.item.id }}">{{ this.item.title }}</a></strong><br/>
                    {{!-- <em>{{{this.item.description}}}</em> --}}
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{ this.price }} PLN
                </div>
                {{!-- <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </div> --}}
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Suma: {{ totalPrice }} PLN</strong>
    </div>
    {{!-- <hr>
    <div class="text-right">
        <a href="/checkout" type="button" class="btn btn-success">Przejdz do podsumowania</a>
    </div> --}}
{{ else }}
    Jeszcze nie złożono żadnego zamówienia.
{{/if}}
