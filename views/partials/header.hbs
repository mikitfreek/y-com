<div class="row navbar-flex">
    <div class="col-xs-4">
        <div class="logo pull-left">
            <h1>Y-com</h1>
        </div>
    </div>
    <div class="col-xs-8">
        <div class="dropdown pull-right">
            <a href="/account"><i class="fa fa-user" aria-hidden="true"></i> Moje konto</a>
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> Koszyk
                {{# if session.cart.totalItems }}
                <span>({{session.cart.totalItems}})</span>
                {{/if}}
            </a>
            {{# if session.cart.totalItems }}
            <div class="dropdown-menu">
                <div class="cart">
                    {{# each session.cart.items }}
                    <div class="row">
                        <div class="col-xs-4">
                            {{ this.item.title }}
                        </div>
                        <div class="col-xs-4 text-right">
                            <span class="badge">{{ this.quantity }}</span>
                        </div>
                        <div class="col-xs-4 text-right">
                            {{ this.price }} PLN
                        </div>
                        <div class="col-xs-4 text-right">
                            <a href="/remove/{{this.item.id}}" class="btn btn-default">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                    {{/each}}
                    <div class="row">
                        <div class="text-right">
                            <div class="totalPrice">Total: {{ session.cart.totalPrice }} PLN</div>
                            <a href="/cart/" class="btn btn-success">Przejdz do koszyka</a>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="dropdown-menu">
                <div class="cart">
                    <div class="row">
                        <div class="col-xs-12">
                            Koszyk jest pusty
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<div class="row navbar-flex">
    <div class="col-xs-4">
        <div class="pull-left">
            <a href="/"><i class="fa fa-home" aria-hidden="true"></i> Strona główna</a>
        </div>
    </div>
</div>