<h1>{{title}}</h1>
{{!-- <p>Welcome to the {{title}}</p> max-width="420" max-height="" --}} 

{{!-- {{# each products }} --}}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        {{# if product.img }}
        <div class="pimg" style="background-image:url('{{ product.img }}')"></div>
        {{!-- <img src="{{ this.img }}" title="thumbnail" /> --}}
        {{ else }}
        <div class="pimg" style="background-image:url('https://placeholder.pics/svg/300/DEDEDE/555555/Zdj%C4%99cie%20niedost%C4%99pne')"></div>
        {{!-- <img src="https://via.placeholder.com/420x315" title="thumbnail" /> --}}
        {{/if}}
        {{!-- {{# if product.img }}
        <img src="{{ product.img }}" title="thumbnail" />
        {{ else }}
        <img src="https://placeholder.pics/svg/800x600/DEDEDE/555555/Zdj%C4%99cie%20niedost%C4%99pne" title="thumbnail" />
        {{/if}} --}}

        <div class="caption">
          <h3>{{ product.title }}</h3>
            <p class="description">{{{product.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ product.price }} PLN</div>
              <a href="/add/{{ product.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Dodaj do koszyka</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{!-- {{/each}} --}}

